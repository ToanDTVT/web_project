  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header"> 
      <h1>
        <i class="fa-fa-th"></i> <%= title %> 
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        
        <div class="box-body">
          
          <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input class="form-control" name="name" placeholder="Input name">
            <br/>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>

          <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>MSSV</th>
                    <th>Position</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Fingerprint</th>
                </tr>
            </thead>
            <tbody>

              <% data.map(function(cat) { %>
                <tr>
                  <td scope="row"><%= cat.id %></td>
                  <td scope="row"><%= cat.full_name %></td>
                  <td scope="row"><%= cat.student_id %></td>
                  <td scope="row"><%= cat.position %></td>
                  <td scope="row"><%= cat.email %></td>
                  <td scope="row"><%= cat.pass_en == 0 ? 'Không cho phép' : 'Cho phép' %></td>
                  <td scope="row"><%= cat.fing_en == 0 ? 'Không cho phép' : 'Cho phép' %></td>
                  <td class="text-right">
                    <a href="/config_users_secur/<%= cat.id %>" class="btn btn-sm btn-default">Cấu hình</a>
                  </td>
                </tr>
              <% }) %>
                
            </tbody>
          </table>
          
        </div>
        <!-- /.box-body -->
         
        <ul class="pagination">
          <li><a href="#">&laquo;</a></li>
          <% for(i = 1; i < totalPage; i++) { %>
            <li><a href="/users_config/?page=<%=i%>"><%= i%></a></li>
          <% } %>
          <li><a href="#">&raquo;</a></li>
        </ul>

      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include ('footer') %>