%> -->
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <i class="fa-fa-th"></i> <%= title %> 
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        
        <div class="box-body">
          
        
          <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input class="form-control" name="name" placeholder="Input name">
            <br/>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>

          <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>MSSV</th>
                    <th>Position</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
              <% data.map(function(cat) { %>
                <tr>
                  <td scope="row"><%= cat.id %></td>
                  <td scope="row"><%= cat.full_name %></td>
                  <td scope="row"><%= cat.student_id %></td>
                  <td scope="row"><%= cat.position %></td>
                  <td scope="row"><%= cat.email %></td>
                  <td class="text-right">
                      <a href="/edit_infor_users/<%= cat.id %>" class="btn btn-sm btn-primary">Sửa</a>
                      <a href="/delete_infor_users/<%= cat.id %>" class="btn btn-sm btn-danger">Xóa</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
          
          <ul class="pagination">
            <li><a href="#">&laquo;</a></li>
            <% for(i = 1; i < totalPage; i++) { %>
              <li><a href="/infor_users/?page=<%=i%>"><%= i%></a></li>
            <% } %>
            
            
            <li><a href="#">&raquo;</a></li>
          </ul>
          
        </div>

      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include ('footer') %>