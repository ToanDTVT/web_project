<%- include ('header') %>
<%- include ('aside') %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        ESP32 CONTROL 
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="row">
          <div class="col-md-4">
            
            <form action="/send-command-open-door" method="POST" role="form">
              <div class="box-body">
                <h1>Mở cửa</h1>
                <button type="submit" class="btn btn-primary">Gửi Lệnh</button>
              </div>
            </form>

            <form action="/send-command-register-fingerprint" method="POST" role="form">
              <div class="box-body">
                <h1>Đăng ký vân tay</h1>
                <label for="inputData">Nhập MSSV:</label>
                <input type="number" id="inputData" name="inputData" required>
                <button type="submit" class="btn btn-primary">Gửi Lệnh</button>
              </div>
            </form>
            
            <p>Status: <%= status %></p>

          </div>
        </div>
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include ('footer') %>